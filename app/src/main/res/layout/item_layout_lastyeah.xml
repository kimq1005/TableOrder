<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PageLastYeah.LastYeah">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/Last_Order_Store_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_below="@id/Last_Order_TTT"
            android:text="왕초밥 수원점"
            tools:ignore="NotSibling" />

        <View
            android:layout_marginTop="15dp"
            android:id="@+id/Last_view1"
            android:background="#EFEFEF"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/Last_Order_Store_Name"
            />

        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/Last_MenuInfo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Last_view1"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="왕초밥"/>

                <TextView
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="1"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <TextView
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15000"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원" />
            </LinearLayout>


        </RelativeLayout>







        <View
            android:layout_marginTop="15dp"
            android:id="@+id/Last_view2"
            android:background="#EFEFEF"
            android:layout_width="match_parent"
            android:layout_below="@+id/Last_MenuInfo_layout"
            android:layout_height="2px"
            />

        <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/Last_TimeNunmber_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Last_view2"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Last_Order_Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주문일시 : "/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주문일시 : 2021년 7월 2일 오후 14:00"/>



            </LinearLayout>


            <LinearLayout
                android:id="@+id/Last_Order_Number"
                android:layout_below="@id/Last_Order_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_below="@+id/Last_StoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주문번호 : "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AXIEKDCIEAQER945AE"/>

            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_marginTop="15dp"
            android:id="@+id/Last_view3"
            android:background="#EFEFEF"
            android:layout_width="match_parent"
            android:layout_below="@+id/Last_TimeNunmber_layout"
            android:layout_height="2px"
            />

        <RelativeLayout
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/Last_price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Last_view3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:text="총 주문금액"/>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                >

                <TextView
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30000"/>

                <TextView
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="원"/>

            </LinearLayout>


        </RelativeLayout>


        <View
            android:layout_marginTop="15dp"
            android:id="@+id/Last_view4"
            android:background="#EFEFEF"
            android:layout_width="match_parent"
            android:layout_below="@+id/Last_price_layout"
            android:layout_height="2px"
            />

        <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/Last_view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="문의사항"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:textSize="15sp"
                android:text="문의사항이다 "/>

        </LinearLayout>











    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>