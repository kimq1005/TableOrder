<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageDR.GoOrderPage">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/iv_hamburger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_baseline_menu_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp" />



    <ImageView
        android:id="@+id/QR_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_qr_code_24"
        android:layout_marginRight="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/OrderPage_menuImg_img"
                android:layout_marginTop="80dp"
                android:layout_width="250dp"
                android:src="@drawable/snowflake"
                android:layout_height="250dp"
                />

            <View
                android:layout_marginTop="20dp"
                android:background="#EFEFEF"
                android:layout_width="match_parent"
                android:layout_height="2px"
                />


            <TextView
                    android:id="@+id/OrderPage_menuName_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="상품 이름"
                    android:textSize="30sp"
                    android:padding="20dp"
                />



            <View
                android:background="#EFEFEF"
                android:layout_width="match_parent"
                android:layout_height="2px"
                />

            <TextView
                android:id="@+id/OrderPage_menuinfo_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="20dp"
                android:text="이 음식은 오지게 비싸구요 비싼 값도 못해요 먹지 마세요 ㅎㅎ"
                />

            <View
                android:background="#EFEFEF"
                android:layout_width="match_parent"
                android:layout_height="2px"
                />

            <TextView
                android:id="@+id/OrderPage_menuPrice_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2,999억"
                android:padding="20dp"
                android:textSize="30dp"
                android:gravity="center"
                />

            <View
                android:background="#EFEFEF"
                android:layout_width="match_parent"
                android:layout_height="2px"
                />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="right">

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="수량"
                    android:textSize="25sp"
                    android:layout_marginRight="30dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/rectangle_all_corner_radius">

                    <TextView
                        android:id="@+id/MinusBtn"
                        android:gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:textSize="30sp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        />

                    <TextView
                        android:gravity="center"
                        android:id="@+id/ZeroBtn"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textSize="20sp"
                        android:layout_marginRight="20dp"
                        />

                    <TextView
                        android:id="@+id/PlusBtn"
                        android:gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:textSize="25sp"
                        android:layout_marginRight="20dp"/>




                </LinearLayout>




            </LinearLayout>


            <View
                android:layout_marginTop="20dp"
                android:background="#EFEFEF"
                android:layout_width="match_parent"
                android:layout_height="2px"
                />

            <Button
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="장바구니에 담기"/>


        </LinearLayout>







    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>