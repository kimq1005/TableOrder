<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageGoOrderPage.GoSideOrderPage">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:background="@color/white"
        android:id="@+id/top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <ImageView
            android:id="@+id/side_back_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/leftgoarrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="15dp" />


        <ImageView
            android:id="@+id/side_orderlist_icon"
            app:layout_constraintRight_toLeftOf="@+id/QR_icon_yeah"

            android:layout_marginEnd="25dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="@id/orderlist_txt"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/orderlist"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/orderlist_icon"
            android:id="@+id/orderlist_txt"
            android:textSize="11dp"
            android:layout_marginRight="25dp"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/shopping_baket_txt"
            android:text="OrderList"/>


        <ImageView
            android:id="@+id/QR_icon_yeah"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="@id/shopping_baket_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/qrcode"
            android:layout_marginRight="15dp" />



        <TextView
            android:id="@+id/shopping_baket_txt"
            android:layout_marginRight="22dp"
            android:textSize="11dp"
            app:layout_constraintTop_toBottomOf="@+id/QR_icon_yeah"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/Side_OrderPageImg_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Side_OrderPage_menuImg_img"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/food1"
                android:layout_height="250dp"
                />

            <TextView
                android:fontFamily="@font/osw"
                android:id="@+id/Side_OrderPage_menuName_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="상품 이름"
                android:textSize="30sp"
                android:padding="20dp"
                />


            <View
                android:background="#EFEFEF"
                android:layout_width="match_parent"
                android:layout_height="2px"
                />




        </LinearLayout>


        <RelativeLayout
            android:id="@+id/Side_OrderPagePrice_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Side_OrderPageImg_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/Side_OrderPage_menuPrice_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="5000"
                    android:padding="10dp"
                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="원"/>

            </LinearLayout>



        </RelativeLayout>

        <View
            android:id="@+id/Side_OrderPage_PriceView"
            android:layout_below="@id/Side_OrderPagePrice_layout"
            android:background="#EFEFEF"
            android:layout_width="match_parent"
            android:layout_height="2px"
            />


        <RelativeLayout
            android:id="@+id/Side_OrderPageMenuScore_layout"
            android:layout_below="@+id/Side_OrderPage_PriceView"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="수량"
                android:textSize="20sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_all_corner_radius"
                android:gravity="right"
                android:layout_alignParentEnd="true"
                >

                <TextView
                    android:id="@+id/MinusBtn"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textSize="25sp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    />

                <TextView
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/SideZeroBtn"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="20sp"
                    android:layout_marginRight="20dp"
                    />

                <TextView

                    android:id="@+id/PlusBtn"
                    android:gravity="center"
                    android:layout_width="30dp"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textSize="25sp"
                    android:layout_marginRight="20dp"/>



            </LinearLayout>




        </RelativeLayout>




        <RelativeLayout
            android:background="#EFEFEF"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/Side_OrderPageMenuScore_layout">

            <TextView
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 주문 금액"/>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >


                <TextView
                    android:id="@+id/Side_OrderPage_resultPrice_txt"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13000"/>

                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textSize="20dp"/>


            </LinearLayout>


            <TextView
                android:id="@+id/GO_SideComplted_Page"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/order"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/osw"
                android:textSize="20sp"
                android:layout_alignParentBottom="true"
                android:text="장바구니에 담기" />


        </RelativeLayout>

        <TextView
            android:id="@+id/Side_OrderPage_realmenu_id"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>











</androidx.constraintlayout.widget.ConstraintLayout>