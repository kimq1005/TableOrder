<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white"
    >

    <View
        android:id="@+id/view_2"
        android:background="#EFEFEF"
        android:layout_width="match_parent"
        android:layout_height="2px"
        />

    <RelativeLayout
        android:layout_below="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/com_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/com_menuname_txt"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="치즈킴밥"
            android:textSize="14sp"/>

        <RelativeLayout
            android:id="@+id/OrderPageMenuScore_layout"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/com_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="3,200"
                android:textSize="14sp"
                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_all_corner_radius"
                android:gravity="right"
                android:layout_alignParentEnd="true"
                >



                <TextView
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textSize="20sp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    />

                <TextView
                    android:id="@+id/com_menuscore"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="14sp"
                    android:layout_marginRight="20dp"
                    />

                <TextView

                    android:gravity="center"
                    android:layout_width="30dp"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textSize="14sp"
                    android:layout_marginRight="20dp"/>



            </LinearLayout>




        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>